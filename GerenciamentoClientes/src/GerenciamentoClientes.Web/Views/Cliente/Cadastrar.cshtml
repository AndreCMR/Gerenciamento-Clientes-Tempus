@model GerenciamentoClientes.Historias.ClienteHistoria.ViewModels.ClienteViewModel


@{
    ViewData["Title"] = "Cadastrar Cliente";
}

<div class="card animated fadeInUp animation-delay-7">
    <div class="card-body">

        <form asp-action="Cadastrar" id="form" autocomplete="off">
            <div class="row">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="col-12 form-group label-floating">
                    <label class="control-label">@Html.DisplayNameFor(x => x.Nome) <span class="text-danger">*</span></label>
                    <input rows="3" class="form-control" name="Nome" id="Nome" placeholder="" value="" minlength="30" maxlength="2000" required>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group col-md-12 label-floating">
                    <label asp-for="CPF" class="control-label">CPF <i style="color: red;">*</i></label>
                    <input asp-for="CPF" class="form-control cpf" id="cpf" required />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>

                <div class="col-12 form-group label-floating">
                    <label class="control-label">@Html.DisplayNameFor(x => x.RendaFamiliar) <span class="text-danger">*</span></label>
                    <input rows="3" class="form-control" name="RendaFamiliar" id="RendaFamiliar" placeholder="" value="" minlength="30" maxlength="2000" required>
                    <span asp-validation-for="RendaFamiliar" class="text-danger"></span>
                </div>


                <div class="form-group col-md-3 ">
                    <label asp-for="DataNascimento" class="control-label">Data de nascimento <i style="color: red;">*</i></label>
                    <input asp-for="DataNascimento" type="date" class="form-control" required />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>

                <div class="col-12 form-group">
                    <button type="submit" class="btn btn-raised btn-success btn-block-xs float-sm-right" id="button-submit">
                        <i class="fa fa-file"></i>
                        Salvar
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

